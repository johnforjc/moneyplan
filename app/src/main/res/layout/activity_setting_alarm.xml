<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#85bb65"
    tools:context=".SettingAlarm">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settingAlarm"
        android:text="Setting Alarm"
        android:layout_marginBottom="200dp"
        android:layout_centerHorizontal="true"
        android:textColor="#e8e9c9"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/AlarmSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Not Set"
        android:layout_above="@+id/settingAlarm"
        android:textSize="25sp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="#e8e9c9"
        />

    <Button
        android:id="@+id/settingAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting Alarm"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>